{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // ✅ Gelockert für Build-Erfolg
    "noUnusedParameters": false, // ✅ Gelockert für Build-Erfolg
    "noFallthroughCasesInSwitch": true,

    /* React & Module Support */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* ✅ PATH ALIASES - Hier gehören sie hin! */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],  // Klein: components
      "@pages/*": ["./src/pages/*"],            // Klein: pages  
      "@styles/*": ["./src/styles/*"],          // Klein: styles
      "@services/*": ["./src/services/*"],      // Klein: services
      "@router/*": ["./src/router/*"],          // Klein: router
      "@types/*": ["./src/types/*"],            // Klein: types
      "@utils/*": ["./src/components/utils/*"], // Klein: utils
      "@assets/*": ["./src/assets/*"]           // Klein: assets
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ]
}